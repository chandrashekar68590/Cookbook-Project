<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wooden_background" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button1"
            android:layout_centerHorizontal="true"
            android:text="Main Course"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/searchEditText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/text_box_image"
            android:ems="10"
            android:singleLine="true"
            android:hint="Search Recipes"
            android:textSize="25dp" />

        <Button
            android:id="@+id/searchbutton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchEditText1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/search_image" />

        <Button
            android:id="@+id/button1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:background="@drawable/meal" />

        <Button
            android:id="@+id/button4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_above="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bakers_delight" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/button6"
            android:text="     Gallery   "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:text="Sweet Tooth"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_above="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:background="@drawable/sweet_tooth" />

        <Button
            android:id="@+id/button6"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignTop="@+id/searchbutton1"
            android:background="@drawable/gallery" />

        <Button
            android:id="@+id/settingButton"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignRight="@+id/textView3"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="69dp"
            android:background="@drawable/settings_button" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settingButton"
            android:layout_centerHorizontal="true"
            android:text="Baker&apos;s Delight"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button2"
            android:layout_marginRight="45dp"
            android:layout_toLeftOf="@+id/textView6"
            android:text="Breakfast"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignRight="@+id/textView2"
            android:layout_below="@+id/textView1"
            android:background="@drawable/breakfast" />

        <Button
            android:id="@+id/button5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignTop="@+id/searchbutton1"
            android:background="@drawable/favourites" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button5"
            android:layout_below="@+id/button6"
            android:text="Favourites"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="26sp" />

    </RelativeLayout>

</LinearLayout>