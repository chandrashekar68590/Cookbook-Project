<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     android:id="@+id/RootView" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wooden_background" >

        <Button
            android:id="@+id/sweetToothButton"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/sweet_tooth" />

        <Button
            android:id="@+id/bakersDelightButton"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_below="@+id/sweetToothButton"
            android:layout_marginRight="63dp"
            android:layout_marginTop="29dp"
            android:layout_toLeftOf="@+id/sweetToothButton"
            android:background="@drawable/bakers_delight" />

        <Button
            android:id="@+id/favouriteButton"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignBaseline="@+id/bakersDelightButton"
            android:layout_alignBottom="@+id/bakersDelightButton"
            android:layout_marginLeft="63dp"
            android:layout_toRightOf="@+id/sweetToothButton"
            android:background="@drawable/favourites" />

        <Button
            android:id="@+id/mainCourseButton"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="117dp"
            android:layout_toLeftOf="@+id/favouriteButton"
            android:background="@drawable/meal" />

        <Button
            android:id="@+id/breakfastButton"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignLeft="@+id/favouriteButton"
            android:layout_below="@+id/searchbutton1"
            android:background="@drawable/breakfast" />

        <Button
            android:id="@+id/galleryButton"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_above="@+id/mainCourseButton"
            android:layout_alignLeft="@+id/bakersDelightButton"
            android:layout_marginBottom="50dp"
            android:background="@drawable/gallery" />

        <Button
            android:id="@+id/searchbutton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/galleryButton"
            android:layout_centerHorizontal="true"
            android:background="@drawable/search_image" />

        <EditText
            android:id="@+id/searchEditText1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/searchbutton1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:autoText="true"
            android:background="@drawable/text_box_image"
            android:ems="10"
            android:hint="Search Recipe.."
            android:singleLine="true" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sweetToothButton"
            android:layout_centerHorizontal="true"
            android:text="Sweeth Tooth!"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bakersDelightButton"
            android:layout_toLeftOf="@+id/searchEditText1"
            android:text="Breakfast"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_toRightOf="@+id/searchEditText1"
            android:text="Favourites"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView2"
            android:layout_below="@+id/breakfastButton"
            android:text="Gallery"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignTop="@+id/textView4"
            android:text="Breakfast"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="27sp" />

        <Button
            android:id="@+id/settingButton"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/mainCourseButton"
            android:layout_alignRight="@+id/breakfastButton"
            android:background="@drawable/settings_button" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settingButton"
            android:layout_centerHorizontal="true"
            android:text="Meal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="27sp" />

    </RelativeLayout>

</LinearLayout>