<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     android:id="@+id/RootView" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wooden_background" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Meal"
            android:textColor="@color/abs__background_holo_light"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <Button
            android:id="@+id/sweetToothButton"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@drawable/sweet_tooth" />

        <EditText
            android:id="@+id/searchEditText1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:autoText="true"
            android:background="@drawable/text_box_image"
            android:ems="10"
            android:hint="Search Recipe.."
            android:singleLine="true" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/searchbutton1"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_below="@+id/searchEditText1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/search_image" />

        <Button
            android:id="@+id/mainCourseButton"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_above="@+id/textView1"
            android:layout_alignLeft="@+id/sweetToothButton"
            android:background="@drawable/meal" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/abs__background_holo_light"
            android:layout_below="@+id/sweetToothButton"
            android:layout_centerHorizontal="true"
            android:text="Sweet Tooth!"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="15dp" />

        <Button
            android:id="@+id/settingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignRight="@+id/breakfastButton"
            android:background="@drawable/settings_icon" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/breakfastButton"
            android:layout_toRightOf="@+id/searchEditText1"
            android:text="Breakfast"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/abs__background_holo_light"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toLeftOf="@+id/searchEditText1"
            android:text="Gallery"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/abs__background_holo_light"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toLeftOf="@+id/sweetToothButton"
            android:text="Baker&apos;s Delight"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/abs__background_holo_light"
            android:textSize="15sp" />

        <Button
            android:id="@+id/favouriteButton"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignBaseline="@+id/bakersDelightButton"
            android:layout_alignBottom="@+id/bakersDelightButton"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/sweetToothButton"
            android:background="@drawable/favourites" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_below="@+id/favouriteButton"
            android:text="Favourites"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/abs__background_holo_light"
            android:textSize="15sp" />

        <Button
            android:id="@+id/breakfastButton"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignLeft="@+id/favouriteButton"
            android:layout_alignTop="@+id/searchbutton1"
            android:background="@drawable/breakfast" />

        <Button
            android:id="@+id/galleryButton"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignTop="@+id/searchbutton1"
            android:background="@drawable/gallery" />

        <Button
            android:id="@+id/bakersDelightButton"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignTop="@+id/textView4"
            android:background="@drawable/bakers_delight" />

    </RelativeLayout>

</LinearLayout>