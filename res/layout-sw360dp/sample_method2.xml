<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_first_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_weight="0.00"
        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="320dp"
            android:layout_height="49dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/navigationbar"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/ingredientButton"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:background="@drawable/ingredient_button_release" />

        <Button
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="100dp"
            android:background="@drawable/method_button_pressed" />

    </RelativeLayout>
    
    <ScrollView 
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/my_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.21"
        android:background="@drawable/wooden_background" >

    </RelativeLayout>
    
    </ScrollView>

</LinearLayout>